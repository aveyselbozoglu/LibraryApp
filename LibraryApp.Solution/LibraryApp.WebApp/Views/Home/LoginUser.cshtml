@model LibraryApp.Entities.ModelViews.LoginViewModel

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Library</h3>
            </div>
            <div class="panel-body">
                @Html.ValidationSummary(false)
                @using (Html.BeginForm())
                {

                    <fieldset>

                        <div class="form-group">

                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-mail", name = "Email", type = "email" })
                        </div>
                        <div class="form-group">

                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Password", name = "Password", type = "password" })
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <div class="form-group">
                            <button type="submit" href="#" class="btn btn-lg btn-success btn-block">Kayıt Ol</button>
                        </div>
                    </fieldset>

                }
            </div>
        </div>
    </div>
</div>